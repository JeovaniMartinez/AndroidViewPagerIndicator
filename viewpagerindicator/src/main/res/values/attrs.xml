<resources>

    <declare-styleable name="ViewPagerIndicator">
        <attr name="vpi_view_pager" format="reference" />
        <attr name="vpi_items_count" format="integer" />
        <attr name="vpi_item_selected" format="integer" />
        <attr name="vpi_item_type" format="enum">
            <enum name="oval" value="1" />
            <enum name="rectangle" value="2" />
        </attr>
        <attr name="vpi_orientation" format="enum">
            <enum name="horizontal" value="1" />
            <enum name="vertical" value="2" />
        </attr>
        <attr name="vpi_selected_primary_color" format="color" />
        <attr name="vpi_selected_secondary_color" format="color" />
        <attr name="vpi_unselected_primary_color" format="color" />
        <attr name="vpi_unselected_secondary_color" format="color" />
        <attr name="vpi_item_elevation" format="dimension" />
        <attr name="vpi_item_width" format="dimension" />
        <attr name="vpi_item_height" format="dimension" />
        <attr name="vpi_item_margin" format="dimension" />
    </declare-styleable>

</resources>